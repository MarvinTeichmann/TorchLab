{
    "modules": {
        "model": "mapillary",
        "loss": "xentropy",
        "optimizer": "adam",
        "eval": "voc"
    },

    "dataset" : {
        "dataset": "camvid360",
        "train_file": null,
        "val_file": null,

        "ignore_label": 0,
        "idx_offset": 1,
        "num_classes": null,

        "label_encoding": "dense",

        "grid_size": 1,

        "grid_dims": 2,

        "transform": {
            "presize": 0.5,
            "color_augmentation_level": 1,
            "fix_shape": true,
            "reseize_image": false,
            "patch_size": [448, 448],
            "random_crop": true,
            "random_roll": true,
            "max_crop": 4,
            "crop_chance": 0.6,
            "random_resize": true,
            "lower_fac": 0.5,
            "upper_fac": 2,
            "resize_sig": 0.4,
            "random_flip": true,
            "random_rotation": true,
            "equirectangular": false,
            "normalize": false,
            "mean": [0.485, 0.456, 0.406],
            "std": [0.229, 0.224, 0.225]
        },
        "num_worker": 8
    },

    "encoder": {
        "source": "mapillary",
        "scales": [1, 0.7, 0.5],
        "use_multi_scale": false,
        "load_pretrained": true,
        "flip": false,
        "freeze_bn": false
    },

    "decoder": {
        "skip_connections": false,
        "scale_down": 0.01,
        "dropout": true,
        "bottleneck": null,
        "upsample": true
    },

    "loss": {
        "border": 0.05
    },

    "training": {
        "batch_size": 4,
        "learning_rate": 5e-5,
        "lr_schedule": "constant",
        "exp": 1.5,
        "base": 0.9,
        "base2": 2,
        "lr_offset_epochs": 100,
        "momentum": 0.9,
        "weight_decay": 5e-4,
        "clip_norm": 1.0,
        "max_epochs": 300,
        "pre_eval": false,
        "cnn_gpus": null,
        "max_epoch_steps": null,
        "init_weights_from_checkpoint": false,
        "wd_policy": 2,
        "num_gpus": 1
    },

    "evaluation": {
        "imgs_minor": [1, 20, 50],
        "transparency": 0,
        "default_level": "minor",
        "reduce_val_bs": true
    },

    "logging": {
        "display_iter": 200,
        "eval_iter": 1,
        "max_val_examples": null,
        "max_train_examples": 150,
        "log": true,
        "checkpoint_backup": 10000000,
        "mayor_eval": 50
    },

    "plotting": {
        "defaults": {
            "plot": ["mIoU", "accuracy", "mIoU"],
            "prefixes": ["val", "val", "train"],
            "titles": ["Validation mIoU", "Validation Accuracy", "Train mIoU"]
        }
    },

    "pyvision": {
        "project_name": "localseg",
        "entry_point": "../localseg/segmodel.py",
        "plotter": "../localseg/plotting/segplotter.py",
        "required_packages": ["../localseg"],
        "optional_packages": ["../pyvision/pyvision"],
        "copy_required_packages": true,
        "copy_optional_packages": true
    }
}