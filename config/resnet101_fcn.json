{
    "modules": {
        "encoder": "resnet",
        "decoder": "fcn",
        "loss": "xentropy",
        "optimizer": "adam",
        "eval": "voc"
    },

    "dataset" : {
        "dataset": "sincity_small",
        "train_file": null,
        "val_file": null,

        "ignore_label": 0,
        "idx_offset": 1,
        "num_classes": null,

        "transform": {
            "color_augmentation_level": 1,
            "fix_shape": true,
            "reseize_image": false,
            "patch_size": [512, 512],
            "random_crop": true,
            "max_crop": 8,
            "crop_chance": 0.6,
            "random_resize": true,
            "lower_fac": 0.5,
            "upper_fac": 2,
            "resize_sig": 0.4,
            "random_flip": true,
            "random_rotation": false,
            "equirectangular": false,
            "normalize": true,
            "mean": [0.485, 0.456, 0.406],
            "std": [0.229, 0.224, 0.225]
        },
        "num_worker": 8
    },

    "encoder": {
        "source": "simple",
        "dilated": false,
        "normalize": false,
        "batched_dilation": null,
        "num_layer": 101,
        "load_pretrained": true,
        "mean": [0.485, 0.456, 0.406],
        "std": [0.229, 0.224, 0.225],
        "simple_norm": false
    },

    "decoder": {
        "skip_connections": true,
        "scale_down": 0.01,
        "dropout": true
    },

    "training": {
        "batch_size": 16,
        "learning_rate": 2e-5,
        "lr_schedule": "poly",
        "exp": 1.5,
        "base": 0.9,
        "base2": 2,
        "momentum": 0.9,
        "weight_decay": 5e-4,
        "clip_norm": null,
        "max_epochs": 200,
        "pre_eval": true,
        "cnn_gpus": null,
        "max_epoch_steps": null,
        "init_weights_from_checkpoint": false,
        "wd_policy": 2,
        "num_gpus": 2
    },

    "logging": {
        "display_iter": 100,
        "eval_iter": 1,
        "max_val_examples": null,
        "max_train_examples": 500
    },

    "plotting": {
        "defaults": {
            "plot": ["mIoU", "accuracy", "mIoU"],
            "prefixes": ["val", "val", "train"],
            "titles": ["Validation mIoU", "Validation Accuracy", "Train mIoU"]
        },
        "plot_params": false
    },

    "pyvision": {
        "project_name": "TorchCRF2",
        "entry_point": "../torchsegkit/segmodel.py",
        "plotter": "../torchsegkit/plotting/crfplotter.py",
        "required_packages": ["../torchsegkit"],
        "optional_packages": ["../pyvision/pyvision"],
        "copy_required_packages": true,
        "copy_optional_packages": true
    }
}